{
    "env": {
        "browser": true,
        "es2020": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "overrides": [
        {
            "files": [
                "*.test.js",
                "*.spec.js"
            ],
            "rules": {
                "no-unused-expressions": "off"
            }
        }
    ],
    "rules": {
        "indent": [
            "error",
            4
        ]
    }
}
